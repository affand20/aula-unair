<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.trydev.aulaunair">

    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@drawable/unair"
        android:label="@string/app_name"
        android:roundIcon="@drawable/unair"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name=".ui.channel.ChannelDetailActivity"></activity>
        <activity android:name=".ui.absen.DetailAbsenActivity" />
        <activity android:name=".ui.channel.ChannelActivity" />
        <activity android:name=".ui.absen.AbsenActivity" />
        <activity android:name=".ui.tugas.DetailTugasActivity" />
        <activity android:name=".ui.tugas.TugasActivity" />
        <activity android:name=".ui.materi.DetailMateriActivity" />
        <activity android:name=".ui.materi.MateriActivity" />
        <activity android:name=".ui.mahasiswa.MahasiswaActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.jadwal.JadwalActivity" />
        <activity android:name=".ui.chat.ContactListActivity" />
        <activity
            android:name=".ui.chat.ChatRoomActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.dosen.DosenActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>